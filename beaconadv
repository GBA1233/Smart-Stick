#include <Arduino.h>
#include <BLEDevice.h>
#include <BLEUtils.h>
#include <BLEAdvertising.h>

#define BEACON_UUID "12345678-1234-1234-1234-1234567890AB"  // Example UUID
#define BEACON_NAME "ESP32_BEACON"

void setup() {
  Serial.begin(115200);

  BLEDevice::init(BEACON_NAME);
  BLEAdvertising *pAdvertising = BLEDevice::getAdvertising();
  pAdvertising->addServiceUUID(BEACON_UUID);
  pAdvertising->setScanResponse(true);
  pAdvertising->setMinPreferred(0x06);  // 0x06 is a typical value for BLE
  BLEDevice::startAdvertising();

  Serial.println("Beacon started...");
}

void loop() {
  // Nothing to do here
}
